#include <bits/stdc++.h>
using namespace std;
typedef struct
{
    vector <int> p;
    int s;
    int flag;
}S;
int main()
{
   S a[101];
   int n,x,c=1,m=0,k=0,i,j,t;
   cin>>n;
   for(i=1;i<=n;i++)
   {
       cin>>x;
       m=m+x;
       a[i].s=x;
       a[i].flag=1;
   }
   t=n;
   while(t!=0)
   {
       for(i=1;i<=n;i++)
       {
           if(a[i].p.size()>=a[i].s*10&&a[i].flag==1)
           {
               t--;
               a[i].flag=0;
               continue;
           }
           if(a[i].p.size()<a[i].s*10){
           if(t==1)
           {
               x=a[i].p.size()-1;
                if(x>=0){
               if(a[i].p[x]==c-1) c=c+1;
                }
               a[i].p.push_back(c);
               c=c+2;
           }
           else
           {
               a[i].p.push_back(c);
               c++;
           }
           }
       }
   }
   for(i=1;i<=n;i++)
   {
       cout<<"#"<<i<<endl;
       for(j=0;j<a[i].p.size();j++)
       {
           if((j+1)%10==0&&j!=0) cout<<a[i].p[j]<<endl;
           else cout<<a[i].p[j]<<" ";
       }
   }
   return 0;
}














